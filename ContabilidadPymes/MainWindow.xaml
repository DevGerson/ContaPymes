<Window x:Class="ContabilidadPymes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ContabilidadPymes"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1366" WindowStartupLocation="CenterScreen">
    <Grid>
        <materialDesign:DrawerHost>
            <materialDesign:DrawerHost.LeftDrawerContent>
                <StackPanel Orientation="Vertical" Margin="16" Width="300" >
                    <!--Menu Desplegable-->
                    <!--<Button
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4"
                        HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                        CLOSE THIS
                    </Button>-->


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                    VerticalAlignment="Center" 
                                    Width="250"
                                    FontWeight="SemiBold"
                                    FontSize="15"
                                    >
                                    MENU
                                </TextBlock>
                                <Button  x:Name="btn_cerrar_menu"
                                         Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}" 
                                         CommandParameter="{x:Static Dock.Left}" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Right" 
                                         Background="Transparent" 
                                         Padding="0" 
                                         BorderBrush="Transparent" 
                                         Height="50" 
                                         Width="50">
                                    <materialDesign:PackIcon 
                                        Kind="KeyboardBackspace" 
                                        Width="30" 
                                        Height="30" 
                                        Foreground="Black"/>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1">
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    VerticalAlignment="Bottom"
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    >
                                    <materialDesign:PackIcon
                                        Kind="Search"
                                        Foreground="Black"
                                        Height="20"
                                        Width="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"/>
                                </Button>
                                <TextBox
                                    Height="50"
                                    Width="240"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                    FontSize="15">
                                    <materialDesign:HintAssist.Hint>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Margin="0 0 0 0">
                                            <TextBlock
                                                Margin="-1 0 0 0">
                                                Buscar
                                            </TextBlock>
                                        </StackPanel>
                                    </materialDesign:HintAssist.Hint>
                                </TextBox>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="2">
                            <ScrollViewer Margin="7 30 0 0" MaxHeight="540" VerticalScrollBarVisibility="Auto">
                                <!--Container Fist-->
                                <StackPanel>

                                    <StackPanel>
                                        <TextBlock
                                            Margin="0 15 0 15"
                                            FontSize="13"
                                            FontWeight="SemiBold">Libros Contables</TextBlock>
                                    </StackPanel>
                                    
                                    <ListView>
                                        
                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_compras"
                                                Click="Bt_compras_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Compras</TextBlock>
                                            </Button>
                                        </ListViewItem>

                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_ventas"
                                                Click="Bt_ventas_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Ventas</TextBlock>
                                            </Button>
                                        </ListViewItem>

                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_habilitacion"
                                                Click="Bt_habilitacion_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Habilitación</TextBlock>
                                            </Button>
                                        </ListViewItem>

                                    </ListView>
                                    
                                    
                                    <StackPanel
                                        Margin="0 15 0 15">
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold">Honorarios y Pagos</TextBlock>
                                    </StackPanel>
                                    
                                    
                                    <ListView>
                                        
                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_impuestos"
                                                Click="Bt_impuestos_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light" >Impuestos</TextBlock>
                                            </Button>
                                        </ListViewItem>

                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_honorarios"
                                                Click="Bt_honorarios_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Honorarios</TextBlock>
                                            </Button>
                                        </ListViewItem>

                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_pagos"
                                                Click="Bt_pagos_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Pago Honorarios</TextBlock>
                                            </Button>
                                        </ListViewItem>
                                    </ListView>

                                    <StackPanel
                                        Margin="0 15 0 15">
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold">Facturas</TextBlock>
                                    </StackPanel>

                                    <ListView>

                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_factura"
                                                Click="Bt_factura_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Facturas</TextBlock>
                                            </Button>
                                        </ListViewItem>
                                    </ListView>

                                    <StackPanel
                                        Margin="0 15 0 15">
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold">Contribuyente y Usuarios</TextBlock>
                                    </StackPanel>

                                    <ListView>
                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_contribuyente"
                                                Click="Bt_contribuyente_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Contribuyentes</TextBlock>
                                            </Button>
                                        </ListViewItem>

                                        

                                        <!--Boton-->
                                        <ListViewItem
                                            Padding="0"
                                            Margin="0"
                                            Width="270"
                                            Height="40">
                                            <Button
                                                Name="bt_usuario"
                                                Click="Bt_usuario_Click"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Height="40"
                                                Width="270"
                                                Padding="0"
                                                Margin="0"
                                                HorizontalContentAlignment="Left">
                                                <TextBlock Margin="15 0 0 0" FontWeight="Light">Usuarios</TextBlock>
                                            </Button>
                                        </ListViewItem>


                                    </ListView>
                                </StackPanel>
                                <!--End Accounting-->


                                <!--End Container-->

                            </ScrollViewer>
                            <!--End ScrollViewer-->
                        </Grid>
                    </Grid>
                </StackPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>



            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="630*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Background="Black" Height="auto" Width="auto">
                        <Button  Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"  CommandParameter="{x:Static Dock.Left}"
                        Margin="0 0 0 0" Background="Transparent" BorderBrush="Transparent" Width="50" Height="50" Padding="0">
                            <materialDesign:PackIcon Kind="Menu" Foreground="White" Height="25" Width="25"/>
                        </Button>


                        <StackPanel Name="panel_window"  HorizontalAlignment="Right">
                            <StackPanel Visibility="Hidden" HorizontalAlignment="Right" Width="auto" Orientation="Horizontal">
                                <Button Name="minimizar"  Margin="0 0 0 0" Background="Transparent" BorderBrush="Transparent" Width="50" Height="50" Padding="0">
                                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="White" Height="15" Width="15"/>
                                </Button>
                                <Button Name="maximizar" Margin="0 0 0 0" Background="Transparent" BorderBrush="Transparent" Width="50" Height="50" Padding="0">
                                    <materialDesign:PackIcon Kind="WindowMaximize" Foreground="White" Height="15" Width="15"/>
                                </Button>
                                <Button Name="cerrar"  Margin="0 0 0 0" Background="Transparent" BorderBrush="Transparent" Width="50" Height="50" Padding="0">
                                    <materialDesign:PackIcon Kind="WindowClose" Foreground="White" Height="15" Width="15" HorizontalAlignment="Right"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid x:Name="contenedor" Grid.Row="1">
                    <!--Grid Contenedor de Controles de Usuarios-->
                </Grid>

                <Grid Grid.Row="2" Background="Black">

                </Grid>

            </Grid>
        </materialDesign:DrawerHost>
    </Grid>
</Window>
