<UserControl x:Class="ContabilidadPymes.Controles.ReportContribuyente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContabilidadPymes.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="500" Loaded="UserControl_Loaded">
    <Grid>
        <DataGrid Name="VistaData" AutoGenerateColumns="False" IsReadOnly="True" MouseDoubleClick="VistaData_MouseDoubleClick" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nit" Width="120" Binding="{Binding Path=nit}"/>
                <DataGridTextColumn Header="Razon" Width="300" Binding="{Binding Path=razon_social}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
